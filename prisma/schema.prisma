// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

// Enumeración de Roles
enum Role {
  PATIENT
  THERAPIST
}

// ------------------------------------------------------------------------
// MODELO USER (CORREGIDO)
// ------------------------------------------------------------------------
model User {
  id                  String     @id @default(cuid())
  email               String     @unique
  password            String
  firstName           String?
  lastName            String?
  role                Role       @default(PATIENT)
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt

  // Relación Terapeuta-Paciente (CORREGIDO: "TherapistPatients" para claridad)
  therapistId         String? // El ID del terapeuta (si el usuario es un paciente)
  therapist           User?      @relation("TherapistPatients", fields: [therapistId], references: [id])
  patients            User[]     @relation("TherapistPatients") // Lista de pacientes (si el usuario es un terapeuta)

  // Relaciones de Negocio para un Paciente
  checkIns            CheckIn[]
  goals               Goal[]     @relation("PatientGoals") // Objetivos asignados al paciente
  assignments         Assignment[] @relation("PatientAssignments")

  // Relaciones de Negocio para un Terapeuta (NUEVO: Para rastrear qué objetivos creó)
  goalsCreated        Goal[]     @relation("GoalsCreatedByTherapist")

  // Mensajería
  sentMessages        Message[]  @relation("SentMessages")
  receivedMessages    Message[]  @relation("ReceivedMessages")
}

// ------------------------------------------------------------------------
// MODELO CHECKIN (Sin cambios necesarios)
// ------------------------------------------------------------------------
model CheckIn {
  id        String    @id @default(cuid())
  date      DateTime  @default(now())
  mood      Int 
  anxiety   Int 
  energy    Int 
  thoughts  String?
  
  patientId String
  patient   User      @relation(fields: [patientId], references: [id])
}

// ------------------------------------------------------------------------
// MODELO GOAL (Meta) (CORREGIDO)
// ------------------------------------------------------------------------
model Goal {
  id        String    @id @default(cuid())
  title     String
  metric    String 
  target    String 
  dueDate   DateTime?
  status    String    @default("active")
  createdAt DateTime  @default(now())

  // Relaciones con el Paciente (sin cambios)
  patientId String
  patient   User      @relation("PatientGoals", fields: [patientId], references: [id])
  
  // Relación con el Terapeuta (NUEVO: Necesario para el controlador)
  therapistId String
  therapist   User      @relation("GoalsCreatedByTherapist", fields: [therapistId], references: [id])
}

// ------------------------------------------------------------------------
// MODELO ASSIGNMENT (Asignación o Tarea) (Sin cambios necesarios)
// ------------------------------------------------------------------------
model Assignment {
  id          String    @id @default(cuid())
  title       String
  description String
  dueDate     DateTime?
  status      String    @default("pending")
  createdAt   DateTime  @default(now())

  patientId   String
  patient     User      @relation("PatientAssignments", fields: [patientId], references: [id])
}

// ------------------------------------------------------------------------
// MODELO MESSAGE (Sin cambios necesarios)
// ------------------------------------------------------------------------
model Message {
  id        String    @id @default(cuid())
  content   String
  createdAt DateTime  @default(now())

  senderId  String
  sender    User      @relation("SentMessages", fields: [senderId], references: [id])

  receiverId String
  receiver  User      @relation("ReceivedMessages", fields: [receiverId], references: [id])
}